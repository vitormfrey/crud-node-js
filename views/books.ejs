<%- include("_header") %> 

<h1>Lista de Livros (<%= model.length%>)</h1>
<!-- Pega o total de itens que retornou do banco -->

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Autor</th>
        <th>Comentarios</th>
        <th class="d-print-none">
          <a href="/create" class="btn btn-sm btn-success">Adicionar</a>        
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (const book of model){%>
        <!-- Nesse FOR Ã© passado pra book cada item de Model -->
        <tr>
          <td><%= book.Title %> </td>
          <td><%= book.Author %> </td>
          <td><%= book.Comments %> </td>
          <td class="d-print-none">
            <a href="/edit/<%= book.Book_ID %> " class="btn btn-sm btn-warning">Editar</a>
            <a href="/delete/<%= book.Book_ID %> " class="btn btn-sm btn-danger">Deletar</a>
          </td>
        </tr>
      <% } %> 
    </tbody>
  </table>
</div>


<%- include("_footer") %>
